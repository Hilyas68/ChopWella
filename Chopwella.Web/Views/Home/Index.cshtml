
@{
    ViewBag.Title = "Index";
    var role = User.IsInRole("ADMIN");
}


@section style{
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    @*<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />*@
}

<div class="container" style="margin-top:30px">


    <div class="row">
        <div class="col-md-4">
            <select class="form-control catId">
                <option value="-1">---Select Category---</option>

                @foreach (var cat in ViewBag.Categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            @if (role)
            {
                <a class="btn btn-success" style="color:#fff"> <i class="fa fa-plus"></i> Reset</a>
            }
        </div>

        <div class="col-md-4">
            <a data-target="#extraModal" data-toggle="modal" class="btn btn-success" style="float:right; color:#fff" onclick=""> <i class="fa fa-plus"></i> Visitors / Extras</a>
        </div>
    </div>
    <div class="" style="margin-top:30px;">
        <table class="table table-bordered table-striped" id="checkinTb" style="width:100%;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>StaffNum</th>
                    <th>Mon</th>
                    <th>Tue</th>
                    <th>Wed</th>
                    <th>Thurs</th>
                    <th>Fri</th>
                </tr>
            </thead>
        </table>
    </div>


</div>


<div class="col-xs-12">
    <div id="extraModal" class="modal fade" tabindex="-1" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Visitors / Extras</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="name">Visitor's Name</label>
                            <input type="text" class="form-control" placeholder="Enter Name" id="name" name="name" style="max-width:none" />
                        </div>

                        <div class="form-group">
                            <label for="staff">Staff</label>
                            <select class="form-control" id="staffId" style="max-width:none">
                                <option value="-1">---Select Staff Name---</option>

                                @foreach (var staff in ViewBag.Staff)
                                {
                                    <option value="@staff.Id">@staff.Name</option>
                                }
                            </select>

                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <img src="~/Content/img/ajax-loader.gif" id="loader" style="display:none" />
                    <button class="btn btn-success" id="AddLogin">Sign</button>
                    <button class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>




@section script{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
    <script>

        $(document).ready(function () {
            var datatable = $('#checkinTb').DataTable();


            var table = $('#checkinTb');

            $(".catId").change(function (event) {
                var catId = $(this).val();
                $(function () {
                    datatable.destroy();
                    datatable = table.DataTable({
                        "ajax": {
                            "url": "http://localhost:60532/api/chopwella/staffbyCat/" + catId,
                            "type": "GET",
                            "dataType": "json",
                            "dataSrc": "",
                            "destroy": "true",
                            "stateSave": "true"
                        },
                        "columns": [
                            { "data": "Name" },
                            { "data": "StaffNum" },
                            {
                                "data": "Monday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            }, {
                                "data": "Tuesday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            }, {
                                "data": "Wednesday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            }, {
                                "data": "Thursday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            },

                            {
                                "data": "Friday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            }
                        ],



                        rowId: 'extn',
                        select: true,
                        dom: 'Bfrtip',
                        "keepConditions": "true",

                        "language": {
                            "checkinTb": "No Record found"
                        }
                    });

                    var clickedValue;

                    $('#checkinTb tbody').on('click', 'td', function (e) {

                        if (confirm("Please Confirm you are signing against your name, because you can't unsign")) {
                          var data = datatable.row($(this).parents('tr')).data();                          
                                                 
                            clickedValue = this.cellIndex;
                            alert("clicked cell :" + clickedValue);
                            $.ajax({
                                type: 'POST',
                                url: 'http://localhost:60532/api/chopwella/AddtoCheckin',
                                data: {

                                    'Id': data.Id,
                                    'CategoryId': data.CategoryId,
                                    'Email': data.Email,
                                    'Name': data.Name,
                                    'StaffNum': data.StaffNum,
                                    'Monday': (clickedValue == 2) ? true : false,
                                    'Tuesday': (clickedValue == 3) ? true : false,
                                    'Wednesday': (clickedValue == 4) ? true : false,
                                    'Thursday': (clickedValue == 5) ? true : false,
                                    'Friday': (clickedValue == 6) ? true : false,

                                },
                                success: function () {

                                }
                            });
                            $(this).removeClass("btn-default").addClass("btn-success").text("Signed");                           
                            $('.btn-success').prop('disabled', true);

                        }


                    });



                });
            });
        })


    </script>
}