
@{
    ViewBag.Title = "Index";
}


@section style{
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
}

<div class="container" style="margin-top:30px">
    <select class="form-control catId">
        <option value="-1">---Select Category---</option>

        @foreach (var cat in ViewBag.Categories)
        {
            <option value="@cat.Id">@cat.Name</option>
        }
    </select>

    <div class="" style="margin-top:30px;">
        <table class="table table-bordered table-striped" id="checkinTb" style="width:100%;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>StaffNum</th>
                    <th>Mon</th>
                    <th>Tue</th>
                    <th>Wed</th>
                    <th>Thurs</th>
                    <th>Fri</th>
                </tr>
            </thead>
        </table>
    </div>
</div>





@section script{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
    <script>

        $(document).ready(function () {
            var datatable = $('#checkinTb').DataTable();

            var table = $('#checkinTb');

            $(".catId").change(function (event) {
                var catId = $(this).val();

                $(function () {
                    datatable.destroy();
                    datatable = table.DataTable({
                        "ajax": {
                            "url": "http://localhost:60532/api/chopwella/staffbyCat/" + catId,
                            "type": "GET",
                            "dataType": "json",
                            "dataSrc": "",
                            "destroy": "true",
                            "stateSave": "true"
                        },
                        "columns": [
                            { "data": "Name" },
                            { "data": "StaffNum" },
                            {
                                "data": "Monday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            }, {
                                "data": "Tuesday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            }, {
                                "data": "Wednesday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            }, {
                                "data": "Thursday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            },

                            {
                                "data": "Friday", "render": function (data) {
                                    if (data == false) {
                                        return "<a class='btn btn-sm btn-default' > UnSigned <a/>";
                                    } else {
                                        return "<input  class='btn btn-sm btn-success ' type = 'button' value = 'Signed'/>";

                                    }
                                }
                            }
                        ],

                        rowId: 'extn',
                        select: true,
                        dom: 'Bfrtip',
                        "keepConditions": "true",

                        "language": {
                            "emptyTable": "No Record found"
                        }
                    });

                    var clickedValue;
                    $('#checkinTb').on('click', 'td', function () {
                        clickedValue = datatable.cell(this).data();
                        console.log("value =" + clickedValue)



                        $('#checkinTb').on('click', 'a', function (e) {
                            if (confirm("Please Confirm you are signing against your name, because you can't unsign")) {

                                var data = datatable.row($(this).parents('tr')).data();

                                $.ajax({
                                    type: 'POST',
                                    url: 'http://localhost:60532/api/chopwella/AddtoCheckin',
                                    data: {
                                        'Id': data.Id,
                                        'CategoryId': data.CategoryId,
                                        'Email': data.Email,
                                        'Name': data.Name,
                                        'StaffNum': data.StaffNum,
                                        'Monday': (clickedValue == false) ? true : false,
                                        //'Tuesday': (clickedValue == false) ? true : false,
                                        //'Wednesday': (clickedValue == false) ? true : false,
                                        //'Thursday': (clickedValue == false) ? true : false,
                                        //'Friday': (clickedValue == false) ? true : false,

                                    },

                                    success: function (data) {

                                    },
                                    error: function (response) {
                                        alert("An error Occured, Please try again");
                                    }
                                });

                                $(this).removeClass("btn-default").addClass("btn-success").text("Signed");
                                $('.btn-success').prop('disabled', true);

                            }

                        });
                    });

                });

            });

        })

    </script>
}