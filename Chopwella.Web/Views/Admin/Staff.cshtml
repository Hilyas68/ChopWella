@{
    ViewBag.Title = "Staff";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Staffs</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Staffs</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-success" style="margin-bottom:10px; color:#fff" onclick="PopupForm('@Url.Action("AddorEditStaff", "Admin")')"> <i class="fa fa-plus"></i> Add new</a>
                    </div>

                    <div class="card-body">
                        <table id="staffTb" class="table table-bordered table-striped">
                            <thead>
                                <tr class="remove">
                                    <th style="width:20%">Staff Name</th>
                                    <th style="width:20%">Staff Number</th>
                                    <th style="width:20%">Email</th>
                                    <th style="width:20%">Category</th>
                                    <th style="width:10%">Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
@section scripts{

<script src="~/Scripts/staff.js"></script>

}
